{
  "name": "zig-language-extras",
  "displayName": "Zig Language Extras",
  "description": "Zig commands to help test, ... (and maybe something more in the future)",
  "version": "0.1.1",
  "repository": "https://github.com/ianic/zig-language-extras.git",
  "publisher": "ianic",
  "engines": {
    "vscode": "^1.79.0"
  },
  "categories": [
    "Programming Languages",
    "Testing"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Zig Language Extras",
      "properties": {
        "zig-language-extras.testBinaryPath": {
          "type": "string",
          "default": "./zig-out/debug/test",
          "description": "File path to emit binary when running test debug."
        },
        "zig-language-extras.debugConfiguration": {
          "type": "string",
          "default": "ZigDebugTest",
          "description": "Launch configuration name to start when running test debug. Should use binary configured in testBinaryPath config."
        }
      }
    },
    "commands": [
      {
        "command": "zig-language-extras.runFileTests",
        "title": "Zig extras: Run file tests"
      },
      {
        "command": "zig-language-extras.runSingleTest",
        "title": "Zig extras: Run single test"
      },
      {
        "command": "zig-language-extras.debugTest",
        "title": "Zig extras: Debug test"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.79.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "@vscode/test-electron": "^2.3.2"
  }
}